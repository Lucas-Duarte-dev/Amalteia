{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "module": "commonjs",
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@module/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@infra/*": ["infra/*"],
      "@core/*": ["core/*"]
    }
  },
  "include": ["src"]
}
